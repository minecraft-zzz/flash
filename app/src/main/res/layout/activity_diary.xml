<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"

    tools:context=".java.Activity_diary">


    <CalendarView
            android:id="@+id/calendarView"
            style="@style/CustomCalendarView"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="87dp"
        android:layout_height="50dp"
        android:layout_below="@+id/calendarView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="191dp"
        android:layout_height="63dp"
        android:layout_below="@+id/calendarView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/title"
        android:text=""
        android:textColor="@color/black" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendarView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textview"
        android:text="delete" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@+id/textview"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="3dp"
        android:columnWidth="120dp"
        android:gravity="center"
        android:numColumns="1"
        android:stretchMode="columnWidth" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <!-- Home Navigation -->
        <LinearLayout
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/home_icon" />

            <TextView
                android:id="@+id/home_nav"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="主页"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Diary Navigation -->
        <LinearLayout
            android:id="@+id/diary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/diary_icon" />

            <TextView
                android:id="@+id/diary_nav"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="日记"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>
        <!-- Library Navigation -->
        <LinearLayout
            android:id="@+id/action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/library_icon" />

            <TextView
                android:id="@+id/library_nav"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="动作库"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Profile Navigation -->
        <LinearLayout
            android:id="@+id/person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/profile_icon" />

            <TextView
                android:id="@+id/profile_nav"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="个人"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="-30dp"
        android:background="@drawable/gradient_button_color"
        android:src="@drawable/baseline_add_24" />


</RelativeLayout>

